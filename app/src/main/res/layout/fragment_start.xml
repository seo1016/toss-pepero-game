<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".StartFragment"
    android:background="#FFEFBE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginVertical="15dp"
            android:layout_marginHorizontal="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="75dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_arrow_back"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_guide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="안내"
                    android:textSize="18sp"
                    android:textColor="@color/toss_gray"
                    android:fontFamily="@font/pretendard_semibold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0단계"
                android:textSize="16sp"
                android:textColor="@color/toss_gray"
                android:fontFamily="@font/pretendard_semibold"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:background="@drawable/bac_step"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"/>

            <LinearLayout
                android:id="@+id/ll_pepero_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="빼빼로 "
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3개"
                    android:textSize="30sp"
                    android:textColor="@color/toss_blue"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="를"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="주우면 성공이에요"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="그럼 시작할게요"
                android:textSize="30sp"
                android:textColor="@color/toss_gray"
                android:fontFamily="@font/pretendard_bold"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:fontFamily="@font/pretendard_medium"
            android:background="@drawable/bac_count"
            android:gravity="center"
            android:layout_gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부정한 방법으로 게임에 참여하는 경우,\n참여가 중단되거나 리워드가 회수될 수 있어요."
            android:textSize="18sp"
            android:textColor="#4E5968"
            android:fontFamily="@font/pretendard_regular"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>